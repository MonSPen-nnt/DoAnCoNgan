    </div>
</div>

<div class="MoTaChiTiet">


    <div class="MoTaDanhGia">
        <h3>Bình luận</h3>
        @foreach (var binhLuan in ViewBag.BinhLuans)
        {
            <div>
                <strong>@binhLuan.NguoiDung.TenNguoiDung</strong>
                <p>@binhLuan.NoiDung</p>
                <small>@binhLuan.NgayBinhLuan.ToString("dd/MM/yyyy HH:mm:ss")</small>
            </div>
        }

        <h4>Gửi Bình Luận</h4>
        @using (Html.BeginForm("AddComment", "SanPhams", FormMethod.Post))
        {
            @Html.Hidden("MaSanPham", Model.MaSanPham)

            <div>
                <label for="NoiDung">Nội dung</label>
                <textarea name="NoiDung" required></textarea>
            </div>

            <button type="submit">Gửi đánh giá</button>
        }
    </div>



    <div class="TextMoTa">
        <p>
            * Loại: REP 1:1
        </p>


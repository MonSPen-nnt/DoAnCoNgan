@model List<DoAnCoNgan.Models.DanhMucStatisticsViewModel>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Thống Kê Danh Mục</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        canvas {
            width: 100%;
            max-width: 800px;
            height: 400px;
        }
    </style>
</head>
<body>
    <h1>Thống Kê Danh Mục Sản Phẩm</h1>

    <canvas id="barChart"></canvas>

    <script>
        var ctx = document.getElementById('barChart').getContext('2d');
        var barChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Encode(Model.Select(m => m.TenDanhMuc))),
                datasets: [{
                    label: 'Số lượng',
                    data: @Html.Raw(Json.Encode(Model.Select(m => m.SoLuong))),
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1,
                    barThickness: 25 // Tăng kích thước cột nhẹ nhàng
                }]
            },
            options: {
                scales: {
                    x: {
                        beginAtZero: true
                    },
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
</body>
</html>
<!DOCTYPE html>
<html>
<head>
    <title>Admin Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f1f1f1;
        }

        .header {
            background-color: #343a40;
            color: #fff;
            text-align: center;
            padding: 15px 0;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .sidebar {
            width: 250px;
            background-color: #343a40;
            color: #fff;
            padding: 20px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            overflow-y: auto;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
        }

            .sidebar a {
                display: block;
                color: #fff;
                padding: 10px 20px;
                margin-bottom: 10px;
                text-decoration: none;
                border-radius: 5px;
                transition: background-color 0.3s, color 0.3s;
            }

                .sidebar a:hover,
                .sidebar a.active {
                    background-color: #007bff;
                    color: #fff;
                }

        .content {
            margin-left: 270px;
            padding: 20px;
            box-sizing: border-box;
            width: calc(100% - 270px);
        }

        .title {
            font-size: 20px;
            margin-bottom: 20px;
            color: #333;
            text-align: center;
        }

        .section {
            margin-bottom: 20px;
        }

        .button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .button:hover {
                background-color: #0056b3;
            }

        .greeting {
            text-align: center;
            margin-bottom: 20px;
            font-size: 16px;
        }

            .greeting a {
                color: #007bff;
                text-decoration: none;
                transition: color 0.3s;
            }

                .greeting a:hover {
                    color: #0056b3;
                }

        .header h1 {
            margin: 0;
            font-size: 24px;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>Quản lí trang web</h1>
        <a style="padding-left:15px">
            @if (Session["Email"] == null)
            {
                @Html.ActionLink("Tài Khoản", "Index", "LoginUser")
            }
            else
            {
                <a href="@Url.Action("UserDetails", "LoginUser")"><text>Hello</text> @Session["Email"]</a>
                <span style="padding-left:15px">@Html.ActionLink("Đăng Xuất", "LogOutUser", "LoginUser")</span>
            }
        </a>
    </div>

    <div class="sidebar">
        @if (Session["NameUser"] != null)
        {
            <div class="greeting">Xin chào! @Session["NameUser"]</div>
            <div class="greeting"><a href="@Url.Action("LogOutUser","LoginUser")">Đăng xuất</a></div>}
        <a href="@Url.Action("Index","SanPhams")" class="title">Quản Lý Sản Phẩm</a>
        <a href="@Url.Action("Index","DonHangs")" class="title">Quản Lý Đơn Hàng</a>
        <a href="@Url.Action("Index","DanhMucs")" class="title">Quản Lý Loại Hàng</a>
        <a href="@Url.Action("Index","NguoiDungs")" class="title">Quản Lý Thông Tin Người Dùng</a>
        <a href="@Url.Action("Index","TaiKhoans")" class="title">Quản Lý Thông Tin Tài Khoản</a>
        <a href="@Url.Action("Chart","DonHangs")" class="title">Thống kê doanh thu đơn hàng</a>
        <a href="@Url.Action("ThongKeDanhMuc","SanPhams")" class="title">Thống kê Sản Phẩm</a>
        <a href="@Url.Action("Index","BinhLuans")" class="title">Danh Sách Bình Luận</a>
        <a href="@Url.Action("Index","CauHinhs")" class="title">Quản Lý Thuế</a>
      
       
    </div>

    <div class="content">
        @RenderBody();
    </div>
</body>
</html>

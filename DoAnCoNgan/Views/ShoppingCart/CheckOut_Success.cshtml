@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CheckOut_Success</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f9f9f9;
        }

        h2 {
            font-size: 2em;
            color: #4CAF50;
            margin-bottom: 0.5em;
        }

        h4 {
            font-size: 1.2em;
            color: #555;
            margin-bottom: 1.5em;
        }

        a {
            font-size: 1em;
            color: #fff;
            background-color: #007bff;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            a:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <h2>CheckOut Successful</h2>
    <h4>Your orders have been sent to the shop. You will receive your goods in 2-3 days. Thank you.</h4>
    <a href="@Url.Action("TrangChu","SanPhams")">Continue shopping..</a>
</body>
</html>
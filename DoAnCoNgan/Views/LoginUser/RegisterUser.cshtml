@model DoAnCoNgan.Models.TaiKhoan

@{
    Layout = "~/Views/Shared/_LayoutCus.cshtml";
}
<style>
    header {
        background-color: white;
        padding: 10px 0;
        border-bottom: 1px solid #e7e7e7;
    }

    footer {
        background-color: #333;
        color: white;
        padding: 20px 0;
    }

    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }


    .header, .nav, .footer {
        background-color: #f1f1f1;
        padding: 10px;
    }

    .top-bar {
        display: flex;
        justify-content: space-between;
        padding: 10px;
    }

    .lang-login span {
        margin-left: 10px;
    }

    nav ul {
        list-style-type: none;
        padding: 0;
    }

        nav ul li {
            display: inline;
            margin-right: 10px;
        }

    .search-bar {
        display: flex;
        justify-content: space-between;
        padding: 10px;
    }

    main {
        padding: 20px;
    }

    h1 {
        margin: 0 auto;
        text-align: center;
        font-family: Arial, sans-serif;
        margin-top: 150px;
    }

    form {
    }

    fieldset {
        border: 1px solid #ccc;
        padding: 20px;
        margin-bottom: 10px;
        font-family: Arial, sans-serif;
    }

    label {
        display: block;
        margin-bottom: 5px;
    }

    input {
        width: 100%;
        padding: 8px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
    }

    button {
        display: block;
        width: 200px;
        padding: 10px;
        background-color: #090a09;
        color: white;
        border: none;
        cursor: pointer;
        float: right;
        margin-top: 20px;
    }

        button:hover {
            background-color: #0056b3;
        }

    .Khung {
        max-width: 600px;
        margin: 0 auto;
    }

    footer {
        background-color: #333;
        color: white;
        padding: 20px;
        text-align: center;
    }

    .chutk {
        text-align: center;
        font-family: Arial, sans-serif;
        height: 20px;
    }

    .chuluuy {
        text-align: center;
        font-family: Arial, sans-serif;
        height: 20px;
    }

    .Taiday {
        text-decoration: none;
        color: black;
    }
</style>


@using (Html.BeginForm("RegisterUser", "LoginUser", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <body style="background-color: #ffffff; ">

        <div class="vien" style="border: 2px solid #dedcdc; margin: 0 auto; width: 800px; background-color: #ffffff;border-radius:15px; ">
            <p style="font-family:Arial; font-weight:bold; font-size: 30px; margin:5px auto; text-align:center">Đăng Ký Tài Khoản </p>
            <p class="chutk">Nếu bạn đã đăng ký tài khoản, vui lòng đăng nhập <a class="Taiday" href="#">Tại Đây</a>.</p>
            <p class="chuluuy">Lưu ý: Các mục dấu sao màu đỏ không được bỏ trống & phải điền đầy đủ, chính xác</p>
            <form class="Khung">
                <div style="background-color: #ffffff; width: 700px;margin:auto">
                    <fieldset>
                        <legend>Nhập Email đăng ký</legend>


                        <label for="email">Địa Chỉ E-Mail</label>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                    </fieldset>
                    <fieldset>
                        <legend>Nhập mật khẩu</legend>
                        <label for="password">Mật Khẩu</label>
                        @Html.PasswordFor(model => model.MatKhau, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })

                        <label for="confirm-password">Nhập Lại</label>
                        <input type="password" id="MatKhauXacNhan" name="MatKhauXacNhan" class="form-control" />
                        @Html.ValidationMessage("MatKhauXacNhan", "", new { @class = "text-danger" })
                    </fieldset>
                </div>

                <div>
                    @if (ViewBag.ErrorRegister != null)
                    {
                        <div class="text-danger">
                            <p>@ViewBag.ErrorRegister</p>
                        </div>
                    }
                </div>
                <br />
                <button type="submit" style="margin-top:15px;">Đăng ký</button>
            </form>

        </div>

    </body>
}
